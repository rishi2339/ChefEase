<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ChefEase" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorOnPrimary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!-- Button colors -->
        <item name="colorButtonNormal">@color/colorButtonNormal</item>

        <!-- Error color -->
        <item name="colorError">@color/colorError</item>
    </style>

    <style name="AppBar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.ChefEase" parent="Base.Theme.ChefEase" />

    <style name="Widget.App.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:outlineAmbientShadowColor" >@android:color/black</item>
        <item name="android:ambientShadowAlpha">1</item>
        <item name="android:spotShadowAlpha">1</item>
        <item name="android:outlineSpotShadowColor" >@android:color/black</item>
    </style>

</resources>

